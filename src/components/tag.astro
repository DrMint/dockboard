---
interface Props {
    label: string;
    value: number | string;
    tooltip?: string;
}

const { label, value, tooltip } = Astro.props;
---

<div data-component="tag" title={tooltip}>
    <div class="label">{label}</div>
    <div class="value">{value}</div>
</div>

<style>
    [data-component="tag"] {
        display: flex;
        align-items: center;

        width: fit-content;

        font-size: 70%;
        
        & .label {
            color: var(--color-text-400);
            text-transform: uppercase;
            font-weight: 500;

            background-color: var(--color-surface-300);

            padding-block: 5px;
            padding-left: 1em;
            padding-right: 0.5em;

            border: 1px solid var(--color-surface-300);
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }

        & .value {
            color: var(--color-text-100);

            padding-right: 1em;
            padding-left: 0.5em;
            padding-block: 5px;
            border: 1px solid var(--color-surface-300);
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }
    }
</style>
