---
interface Props {
    text: string;
    color?: string;
    fill?: boolean;
    small?: boolean;
}

const { text, color = "var(--color-border-neutral)", fill = false, small = false } = Astro.props;
---

<div
    data-component="pill"
    style={`--color: ${color};`}
    data-fill={fill}
    data-small={small}
>
    <div class="text">{text}</div>
</div>

<style>
    [data-component="pill"] {
        background-color: var(--color-surface-250);
        border-radius: 9999px;
        padding: 5px 10px;
        font-size: 80%;
        font-weight: 500;
        color: var(--color-text-300);
        width: fit-content;
        border: 1px solid var(--color-surface-250);

        &[data-small="true"] {
            font-size: 70%;
            padding: 3px 6px;
        }

        &[data-fill="false"] {
            border-color: var(--color);
        }

        &[data-fill="true"] {
            border-color: var(--color);
            background-color: var(--color);
        }

        @media (prefers-color-scheme: light) {
            border-width: 2px;
        }
    }
</style>
